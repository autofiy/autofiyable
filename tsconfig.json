{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "rootDir": "build",
    "sourceMap": true,
    "listFiles": true,
    "newLine": "LF",
    "noEmitOnError": true
  },
  "include" : [
    "src"
  ],
  "exclude": [
    "node_modules", "out", ".next", "src/__example__" , "src/__tests__"
  ]
}
